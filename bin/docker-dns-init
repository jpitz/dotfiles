#!/usr/bin/env bash

container_name=consul

docker rm ${container_name} &>/dev/null

docker run -d \
    --dns 127.0.0.1 \
    --restart=always \
    --name="${container_name}" \
    --hostname="${container_name}" \
    -p 53:53/udp \
    -p 8301:8301/udp \
    -p 8500:8500 \
    progrium/consul \
    -dc=${DOCKER_MACHINE_NAME} \
    -server \
    -bootstrap \
    -advertise $(docker-machine ip ${DOCKER_MACHINE_NAME})

